          <p><i class="far fa-check-circle"></i>Lorem ipsum dolor sit amet.</p>
          <p><i class="far fa-check-circle"></i>Lorem ipsum dolor sit amet.</p>
  
          <div class="explore-btn">
            <button>Explore Recolon</button>
          </div>
        </div>
      </div>

      <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="choose-us-image">
          <img src="/images/image-5.jpg" alt="" class="img-fluid">
        </div>
      </div>
    </div>
  </div>
</section><br><hr>

<!--Choose use section ends-->

<!--Trending topics starts-->
<section class="trending">
  <div class="col-lg-6 col md-6 col-sm-12">
    <div class="left-trending-item">
      <h2><i class="fas fa-chart-line"></i> Trending on Recolon</h2>
      <div class="ui link items">
        <% posts.forEach((post) => { %>
           <div class="item" style="margin-top: 10%;" onclick="location.href='/recolon/<%= post._id %>'">
             <div class="post-image">
               <img src="<%= post.image %>" alt="">
             </div>
     
             <div class="content" style="margin-left: 5%;">
               <div class="username">
                 <span>By</span> <strong><%= post.author.username %> <%= post.author.lastName %></strong>
               </div>
               <div class="header">
                 <strong><%= post.title.substring(0, 30) %>...</strong>
               </div>
     
               <div class="description">
                 <p><%- post.content.substring(0, 50) %></p>
               </div>
  
               <div class="created" style="padding-top: 5px;">
                 <span><%= post.created.toDateString() %> - 8 min read <i class="far fa-star" style="padding-left: 10px; font-size: 18px;"></i></span>
               </div>
             </div>
           </div>
        <% }) %> 
      </div>
    </div>
  </div>

</section>

<!--Trending topics ends-->


